<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="sample.Controller">
    <children>
        <ImageView fx:id="imageView" fitHeight="380.0" fitWidth="380.0" layoutX="10.0" layoutY="10.0"
                   pickOnBounds="true" preserveRatio="true"/>
        <Button fx:id="bntOpen" layoutX="402.0" layoutY="14.0" mnemonicParsing="false" onAction="#onClickBtnOpen"
                prefHeight="25.0" prefWidth="185.0" text="Завантажити зображення"/>
        <Label fx:id="labelFilename" alignment="TOP_LEFT" layoutX="402.0" layoutY="49.0" prefHeight="17.0"
               prefWidth="185.0" text="Зображення не завантажено"/>
        <Button fx:id="btnSave" layoutX="402.0" layoutY="156.0" mnemonicParsing="false" onAction="#onClickBtnSave"
                prefHeight="25.0" prefWidth="185.0" text="Зберегти зображення"/>
        <ComboBox fx:id="imageFormat" layoutX="402.0" layoutY="97.0" prefHeight="25.0" prefWidth="185.0"
                  promptText="Новий формат"/>
    </children>
</AnchorPane>
